    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <Button
            android:id="@+id/w1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WebView HTML5Test"/>

        <Button
            android:id="@+id/xw1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XWalkView HTML5Test"/>

        <Button
            android:id="@+id/w2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WebView sunspider 1.0.2"/>

        <Button
            android:id="@+id/xw2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XWalkView sunspider 1.0.2"/>

    </LinearLayout>

</RelativeLayout>
